{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-6">
				<h4>Shipping for</h4>
				<hr>

				<p>{{ order.address.address1 }}</p>
				<p>{{ order.address.address2 }}</p>
				<p>{{ order.address.city }}</p>
				<p>{{ order.address.postal_code }}</p>
			</div>
			<div class="col-md-6">
				<h4>Products</h4>
				<hr>

				{% for product in order.products %}
					<a href="{{ path_for('product.get', { slug: product.slug })}}">{{ product.title }}</a>&nbsp;<small>( x{{ product.pivot.quantity }} )</small>
				{% endfor %}
			</div>
		</div>
		<br>
	</div>
{% endblock %}